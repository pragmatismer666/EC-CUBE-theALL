{% if CustomerRank %}
    <p>{{ CustomerRank.name }}{{ 'customerrank.common.customer_price'|trans }}</p>
    <p class="customer_rank_price_default" id="customer_rank_price_default">
        {% if Product.hasProductClass %}
            {% if Product.getCustomerRankPriceMin(CustomerRank.id) == Product.getCustomerRankPriceMax(CustomerRank.id) %}
                {{ Product.getCustomerRankPriceIncTaxMin(CustomerRank.id)|price }}
            {% else %}
                {{ Product.getCustomerRankPriceIncTaxMin(CustomerRank.id)|price }} ï½ž {{ Product.getCustomerRankPriceIncTaxMax(CustomerRank.id)|price }}
            {% endif %}
        {% else %}
            {{ Product.getCustomerRankPriceIncTaxMin(CustomerRank.id)|price }}
        {% endif %}
    </p>
{% endif %}
