{% extends '@admin/default_frame.twig' %}
{% set menus = ['setting', 'rank'] %}
{% block title %}{{ 'customerrank.admin.nav.setting.rank'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.setting'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
<script>
var setModeAndSubmit = function(mode, keyname, keyid) {
    document.form1.mode.value = mode;
    if(keyname !== undefined && keyname !== "" && keyid !== undefined && keyid !== "") {
        document.form1[keyname].value = keyid;
    }
    document.form1.submit();
};
</script>
{% endblock javascript %}

{% block main %}
    <form role="form" class="form-row" name="form1" id="form1" method="post" action="?">
        {{ form_widget(form._token) }}
        <input type="hidden" name="mode" value="regist">
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8"><span class="card-title">{{ 'customerrank.admin.setting.title'|trans }}</span>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#ordererInfo"
                                       aria-expanded="false" aria-controls="ordererInfo">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="ordererInfo">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.login_disp.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.login_disp) }}
                                        {{ form_errors(form.login_disp) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.term.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.term) }}
                                        {{ form_errors(form.term) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.term_start.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.term_start) }}
                                        {{ form_errors(form.term_start) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.rank_down.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.rank_down) }}
                                        {{ form_errors(form.rank_down) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.target_status.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.target_status) }}
                                        {{ form_errors(form.target_status) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-regular" onClick="setModeAndSubmit('rank_check','','');"
                                        type="button">{{ 'customerrank.admin.setting.rank.label.rank_check'|trans }}</button>
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'customerrank.admin.common.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
