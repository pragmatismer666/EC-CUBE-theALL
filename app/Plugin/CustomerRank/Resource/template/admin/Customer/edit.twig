{% extends '@admin/default_frame.twig' %}
{% set menus = ['customer', 'admin_customer_rank'] %}
{% block title %}{{ 'customerrank.admin.nav.customer.rank'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.customer.customer_management'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
<script>
function changeAction(action) {
    document.form1.action = action;
}
</script>
{% endblock javascript %}

{% block main %}
    <form role="form" class="form-row" name="form1" id="form1" method="post" action="?">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8"><span class="card-title">{{ 'customerrank.admin.rank.edit.edit'|trans }}</span>
                                </div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#ordererInfo"
                                       aria-expanded="false" aria-controls="ordererInfo">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="ordererInfo">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.name.vars.label }}</span>
                                        <span class="badge badge-primary ml-1">{{ 'admin.common.required'|trans }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.discount_rate.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        <div class="input-group">
                                            {{ form_widget(form.discount_rate, {attr: {class: 'col-auto text-right'}}) }}
                                            <div class="input-group-append">
                                                <span class="input-group-text">%</span>
                                            </div>
                                            {{ form_errors(form.discount_rate) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.point_rate.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        <div class="input-group">
                                            {{ form_widget(form.point_rate, {attr: {class: 'col-auto text-right'}}) }}
                                            <div class="input-group-append">
                                                <span class="input-group-text">%</span>
                                            </div>
                                            {{ form_errors(form.point_rate) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.discount_value.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.discount_value) }}
                                        {{ form_errors(form.discount_value) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.delivery_free_condition.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.delivery_free_condition) }}
                                        {{ form_errors(form.delivery_free_condition) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.cond_amount.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.cond_amount) }}
                                        {{ form_errors(form.cond_amount) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.cond_buytimes.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.cond_buytimes) }}
                                        {{ form_errors(form.cond_buytimes) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.initial_flg.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.initial_flg) }}
                                        {{ form_errors(form.initial_flg) }}
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3">
                                        <span>{{ form.children.fixed_flg.vars.label }}</span>
                                    </div>
                                    <div class="col">
                                        {{ form_widget(form.fixed_flg) }}
                                        {{ form_errors(form.fixed_flg) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                        </div>
                    </div>
                    <div class="col-6">
                        <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <a href="{{ url('admin_customer_rank') }}">
                                <button class="btn btn-ec-regular"
                                        type="button">{{ 'customerrank.admin.common.back'|trans }}</button>
                                </a>
                            </div>
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5"
                                        type="submit">{{ 'customerrank.admin.common.save'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
