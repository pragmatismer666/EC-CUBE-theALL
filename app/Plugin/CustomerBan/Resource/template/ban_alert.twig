<script>
$(function() {
    const html = `
    {% for error in app.session.flashbag.get('eccube.front.request.error') %}
    <div class="ec-alert-warning">
        <div class="ec-alert-warning__icon"><img src="{{ asset('assets/icon/exclamation-white.svg') }}"></div>
        <div class="ec-alert-warning__text">
            {{ error|trans|nl2br }}
        </div>
    </div>
    {% endfor %}
    `;
    if ($('.ec-alert-warning').length) {
        return;
    }
    if ($('.ec-pageHeader').length > 0) {
        $('.ec-pageHeader').append(html);
    } else {
        $('.ec-layoutRole__contents').prepend(html);
    }

    $('.ec-productRole, .ec-mypageRole, .ec-orderRole').find('button[type=submit]').attr('disabled', true);
});
</script>
