    {# delivery init #}
    <script>
        $(function() {
            
            var shop_tag = $("#{{ form.Shop.vars.id }}")
            var refreshDelivery = function() {
                var shop_id = shop_tag.val();

                if (!shop_id) {
                    $("#{{ form.Shipping.Delivery.vars.id }}").html("<option></option>");
                    $(".order_delivery_note").html("<div class='notice'>{{ 'malldevel.admin.feature.related_product.add.error.no_shop_selected'|trans }}</div>");
                    return;
                }
                var url = "{{ url('malldevel_admin_order_search_delivery_by_shop', { shop_id : '__shop_id__'}) }}";
                $.ajax({
                    url: url.replace("__shop_id__", shop_id),
                    success : function(response) {
                        if (response.success) {
                            $("#{{ form.Shipping.Delivery.vars.id }}").html(response.data)
                            $(".order_delivery_note").html("")
                        } else {
                            shop_tag.selectpicker("val", "");
                            alert(response.error)
                            $(".order_delivery_note").html("<div class='notice'>{{ 'malldevel.admin.feature.related_product.add.error.no_shop_selected'|trans }}</div>");
                        }
                    },
                    failed : function() {
                        shop_tag.selectpicker("val", "");
                        $(".order_delivery_note").html("<div class='notice'>{{ 'malldevel.admin.feature.related_product.add.error.no_shop_selected'|trans }}</div>");
                    }
                })
            }
            var refreshProductList = function() {
                $("#searchProductModalList").html("");
            }
            var onShopChange = function() {
                refreshDelivery();
                refreshProductList();
            }
            shop_tag.on("change", onShopChange)
            refreshDelivery();
        })
    </script>
    {% endif %}
