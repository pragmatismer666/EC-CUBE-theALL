{% block sub_title %}{{ 'malldevel.admin.apply.stripe_apply'|trans }}{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
<style>
.stripe-apply-button {
    color: #fff;
    background: #635bff;
    font-size: 25px;
}
.stripe-apply-button-wrapper {
    display: flex;
    justify-content: center;
}
</style>
