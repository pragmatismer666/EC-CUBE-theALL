{% block main %}
<div class="c-contentsArea__cols">
    <div class="c-contentsArea_primaryCol">
        <div class="stripe-apply-button-wrapper">
            <button class="btn px-5 stripe-apply-button" onclick="location.href='{{ url('malldevel_applicant_stripe_apply_request')}}'">{{ 'malldevel.admin.apply.stripe_apply'|trans }}</button>
        </div>
    </div>        
