{% extends 'default_frame.twig' %}
{% block stylesheet %}
<style>
.msg-wrapper {
    min-height: 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.success-icon {
    display: flex;
    max-width: 100px;
    margin-bottom: 30px;
}
.msg {
    font-size: 20px;
}
</style>
{% endblock %}

{% block main %}
<div class="msg-wrapper">
    <div class="success-icon">
        <img src="{{ asset('assets/img/check.png', 'user_data') }}">
    </div>
    <div class="msg">
        {{ 'malldevel.front.shop_register.success_msg'|trans }}
    </div>
</div>
{% endblock %}