{% extends 'default_frame.twig' %}

{% set body_class = 'front_page' %}

{% block stylesheet %}
    <style>
    .logo-initial-overlay {
        position: fixed; /* Sit on top of the page content */
        width: 100%; /* Full width (cover the whole page) */
        height: 100%; /* Full height (cover the whole page) */
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: #fff; /* Logo background  */
        z-index: 2; /* Specify a stack order in case you're using a different order for other elements */
        display: flex;
    }
    </style>
{% endblock stylesheet %}

{% block javascript %}
<script>
function getCookie(cname) {
  var name = cname + "=";
  var decodedCookie = decodeURIComponent(document.cookie);
  var ca = decodedCookie.split(';');
  for(var i = 0; i <ca.length; i++) {
    var c = ca[i];
    while (c.charAt(0) == ' ') {
      c = c.substring(1);
    }
    if (c.indexOf(name) == 0) {
      return c.substring(name.length, c.length);
    }
  }
  return "";
}
function setCookie(cname, cvalue, exdays) {
  var d = new Date();
  d.setTime(d.getTime() + (exdays*24*60*60*1000));
  var expires = "expires="+ d.toUTCString();
  document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
}

var overlay = document.querySelector(".logo-initial-overlay");
var overlay_flg = getCookie("overlay_flg");
if (overlay_flg) {
    overlay.style.display = "none";
}
$(function() {
    var overlay = $(".logo-initial-overlay")
    if(getCookie("animationTrigger") != "1"){   
        overlay.show()     
        $(window).on('load',function(){            
            setTimeout(function() {
                overlay.fadeOut(500);
            }, 1000);
        })
    } else {
        overlay.hide();
    }

    setCookie("animationTrigger", 1, 7)

})

